{% extends 'default.twig' %}

{% block title %}Sign up{% endblock %}

{% block content %}
    <h1>Sign up</h1>
    <p>Please fill out all required fields to sign up.</p>
    {% include 'partials/flash.twig' %}
    <form action="{{ path_for('auth-insecure-sign-up') }}" method="post">
        <div class="form-group">
            <label for="name">Your name:</label>
            <input type="text" name="name" id="name" class="form-control" value="{{ old['name'] }}">
            <span class="input-error">{{ errors['name']|first }}</span>
        </div>
        <div class="form-group">
            <label for="email">E-Mail:</label>
            <input type="email" name="email" id="email" class="form-control" value="{{ old['email'] }}">
            <span class="input-error">{{ errors['email']|first }}</span>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" name="password" id="password" class="form-control">
            <span class="input-error">{{ errors['password']|first }}</span>
        </div>
        <div class="form-group">
            <label for="password_repeat">Repeat password:</label>
            <input type="password" name="password_repeat" id="password_repeat" class="form-control">
            <span class="input-error">{{ errors['password_repeat']|first }}</span>
        </div>
        <div class="clearfix">
            <input type="submit" class="btn btn-primary float-right" value="Sign up">
        </div>
        <a href="{{ path_for('auth-secure-sign-in') }}">Back to sign in page</a>
    </form>
{% endblock %}