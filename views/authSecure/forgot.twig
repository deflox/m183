{% extends 'default.twig' %}

{% block title %}Forgot password{% endblock %}

{% block content %}
    <h1>Forgot password</h1>
    <p>Please enter your email to reset your password.</p>
    {% include 'partials/flash.twig' %}
    <form action="{{ path_for('auth-secure-forgot-password') }}" method="post">
        <div class="form-group">
            <label for="forgot_email">E-Mail:</label>
            <input type="email" name="forgot_email" id="forgot_email" class="form-control" value="{{ old['forgot_email'] }}">
            <span class="input-error">{{ errors['forgot_email']|first }}</span>
        </div>
        <div class="clearfix">
            <input type="submit" class="btn btn-primary float-right" value="Check">
        </div>
    </form>
{% endblock %}