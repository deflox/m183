{% extends 'default.twig' %}

{% block title %}Reset password{% endblock %}

{% block content %}
    <h1>Reset password</h1>
    <p>Please enter your new password.</p>
    {% include 'partials/flash.twig' %}
    <form action="{{ path_for('auth-secure-reset-password', { 'token': token }) }}" method="post">
        <div class="form-group">
            <label for="password">New password:</label>
            <input type="password" name="password" id="password" class="form-control">
            <span class="input-error">{{ errors['password']|first }}</span>
        </div>
        <div class="form-group">
            <label for="password_repeat">Repeat new password:</label>
            <input type="password" name="password_repeat" id="password_repeat" class="form-control">
            <span class="input-error">{{ errors['password_repeat']|first }}</span>
        </div>
        <div class="clearfix">
            <input type="submit" class="btn btn-primary float-right" value="Save">
        </div>
    </form>
{% endblock %}